<?xml version="1.0"?>
<config>
    <modules>
        <Infinitus_FacebookConnect>
            <version>1.0</version>
        </Infinitus_FacebookConnect>
    </modules>
    <frontend>
        <routers>
            <facebookconnect>
                <use>standard</use>
                <args>
                    <module>Infinitus_FacebookConnect</module>
                    <frontName>facebookconnect</frontName>
                </args>
            </facebookconnect>
        </routers>
        <layout>
            <updates>
                <facebookconnect>
                    <file>facebookconnect.xml</file>
                </facebookconnect>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <facebookconnect>
                <class>Infinitus_FacebookConnect_Model</class>
                <resourceModel>facebookfree_mysql4</resourceModel>
            </facebookconnect>
            <facebookconnect_mysql4>
                <class>Infinitus_FacebookConnect_Model</class>
                <entities>
                    <facebookconnect>
                        <table>infinitus_facebook_customer</table>
                    </facebookconnect>
                </entities>
            </facebookconnect_mysql4>
        </models>
        <resources>
            <facebookconnect_setup>
                <setup>
                    <module>Infinitus_FacebookConnect</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </facebookconnect_setup>
            <facebookconnect_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </facebookconnect_write>
            <facebookconnect_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </facebookconnect_read>
        </resources>
        <blocks>
            <facebookconnect>
                <class>Infinitus_FacebookConnect_Block</class>
            </facebookconnect>
        </blocks>
        <helpers>
            <facebookconnect>
                <class>Infinitus_FacebookConnect_Helper</class>
            </facebookconnect>
        </helpers>
    </global>
</config>