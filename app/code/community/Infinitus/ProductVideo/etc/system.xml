<?xml version="1.0"?>
<config>
    <sections>
        <infinitus_productvideo translate="label" module="productvideo">
        	<label>Product Video</label>
            <tab>infinitus</tab>
            <frontend_type>text</frontend_type>
            <sort_order>360</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<status translate="label">
			    			<label>Enable Product Video</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
                        </status>                       
                        <default_thumb_width translate="label">
                            <label>Default Thumbnail Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
							<depends>
								<status>1</status>
							</depends>		                    
                        </default_thumb_width>
                        <default_thumb_height translate="label">
                            <label>Default Thumbnail Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
							<depends>
								<status>1</status>
							</depends>		                    
                        </default_thumb_height>
                        <default_width translate="label">
                            <label>Default Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
							<depends>
								<status>1</status>
							</depends>		                    
                        </default_width>
                        <default_height translate="label">
                            <label>Default Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
							<depends>
								<status>1</status>
							</depends>		                    
                        </default_height>
                    </fields>
                </settings>
            </groups>
        </infinitus_productvideo>
    </sections>
</config>